<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Monstromatic"
             xmlns:dvm="clr-namespace:Monstromatic.ViewModels.Design;assembly=Monstromatic"
             x:Class="Monstromatic.App"
             RequestedThemeVariant="Dark">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <dvm:DesignVmLocator x:Key="DesignVmLocator"/>
    <SolidColorBrush x:Key="MonstromaticAccent" Color="#553399"></SolidColorBrush>
  </Application.Resources>

  <Application.Styles>
    <SimpleTheme />
  </Application.Styles>
</Application>
