<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Monstromatic.Views.FeatureView"
             Design.DataContext="{Binding Source={StaticResource DesignVmLocator}, Path=FeatureVm}">
    <ToggleButton Content="{Binding DisplayName}" CommandParameter="{Binding $self.IsChecked}" Width="200" MaxHeight="50" Margin="5" Command="{Binding AddFeatureCommand}"/>
</UserControl>
