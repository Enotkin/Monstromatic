<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Monstromatic.ViewModels;assembly=Monstromatic"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:Monstromatic.Converters;assembly=Monstromatic"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="330"
        Width="800" Height="330"
        x:Class="Monstromatic.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Monstromatic"
        TransparencyLevelHint="AcrylicBlur">
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <Window.Resources>
    <conv:IntToMonsterQualityConverter x:Key="MonsterQualityConverter" />
  </Window.Resources>
  <ExperimentalAcrylicBorder >
    <ExperimentalAcrylicBorder.Material>
      <ExperimentalAcrylicMaterial
        TintColor="Black"
        TintOpacity="1"
        MaterialOpacity="0.7"
        BackgroundSource="Digger" />
    </ExperimentalAcrylicBorder.Material>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.Styles>
        <Style Selector="HeaderedContentControl">
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate>
                <Border>
                  <StackPanel>
                    <ContentPresenter TextBlock.FontWeight="Bold" Content="{TemplateBinding Header}" />
                    <Border
                        BorderBrush="{TemplateBinding Background}"
                        BorderThickness="2"
                        CornerRadius="5">
                      <ContentPresenter Content="{TemplateBinding Content}" />
                    </Border>
                  </StackPanel>
                </Border>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
        </Style>
      </Grid.Styles>
      <Grid Grid.Column="0">
        <StackPanel Orientation="Vertical" Margin="5,20,5,20" VerticalAlignment="Top">
          <ComboBox SelectedItem="{Binding SelectedQuality, Mode=OneWayToSource, Converter={StaticResource MonsterQualityConverter}}"
                    Items="{Binding AvailableQualities, Converter={StaticResource MonsterQualityConverter}}"
                    Height="50" PlaceholderText="Качество" FontSize="16"/>
          <CheckBox IsChecked="{Binding IsGroup}" Margin="0,50,0,10" FontSize="16">Группа</CheckBox>
          <TextBox Text="{Binding GroupCount}" IsEnabled="{Binding IsGroup}" Watermark="Количество" FontSize="16"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="3,0,3,10" VerticalAlignment="Bottom">
          <TextBox Text="{Binding Name}" Watermark="Имя" FontSize="16" Margin="0,0,0,10"></TextBox>
          <Button Content="Генерировать" Height="50" Command="{Binding GenerateMonsterCommand}"></Button>
        </StackPanel>
      </Grid>
      <HeaderedContentControl Grid.Column="1" Margin="3" Header="Особенности" Background="{StaticResource ThemeControlHighlightLowBrush}">
        <ItemsControl Items="{Binding Features}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <UniformGrid Columns="4"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
      </HeaderedContentControl>
    </Grid>
  </ExperimentalAcrylicBorder>

</Window>
